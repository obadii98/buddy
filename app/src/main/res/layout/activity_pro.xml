<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/prolayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundd"
    tools:context=".HomeActivity"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/homebtn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:background="#d3d3d3"
            android:clickable="false"
            android:transitionName="home_btn" />

        <Button
            android:id="@+id/calbtn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:background="#d3d3d3"
            android:clickable="false"
            android:transitionName="cal_btn" />

        <Button
            android:id="@+id/probtn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:background="#29A19C"
            android:clickable="false"
            android:transitionName="pro_btn" />

        <Button
            android:id="@+id/nearbtn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:background="#d3d3d3"
            android:clickable="false"
            android:transitionName="near_btn" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="3dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:text="choose your program "
            android:textAlignment="center"

            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|bottom">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:gravity="bottom|center"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="225dp"
                android:layout_weight="1"
                android:gravity="center|bottom"
                android:orientation="vertical"


                >

                <ImageButton
                    android:id="@+id/img_fit"
                    android:layout_width="180dp"
                    android:layout_height="82dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:background="@drawable/asd"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/fiting" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center"
                    android:text="gain weight"
                    android:textAlignment="gravity"
                    android:textColor="#FFFFFF"
                    android:textSize="36sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="225dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"

                >

                <ImageButton
                    android:id="@+id/img_slim"
                    android:layout_width="180dp"
                    android:layout_height="82dp"
                    android:layout_weight="1"
                    android:background="@drawable/asd"
                    android:clickable="true"

                    android:onClick="onClick"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/slimming" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center"
                    android:text="lose weight"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="36sp" />
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>